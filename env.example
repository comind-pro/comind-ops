# ComindOps Platform Environment Configuration
# Copy this file to .env and configure your settings

# ====================================================
# REPOSITORY CONFIGURATION
# ====================================================

# Repository URL (supports both private and public)
# Examples:
# - Public: https://github.com/comind-pro/comind-ops
# - Private: https://github.com/comind-pro/comind-ops-private
REPO_URL=https://github.com/comind-pro/comind-ops

# Repository type: "public" or "private"
REPO_TYPE=public

# ====================================================
# GITHUB CREDENTIALS (Required for private repos)
# ====================================================

# GitHub username (leave empty for public repos)
GITHUB_USERNAME=

# GitHub Personal Access Token (leave empty for public repos)
# Generate at: https://github.com/settings/tokens
# Required scopes: repo (for private repos), read:org (for organization repos)
GITHUB_TOKEN=

# GitHub SSH Private Key (alternative to username/token)
# Path to SSH private key file (leave empty to use token instead)
GITHUB_SSH_PRIVATE_KEY_PATH=

# ====================================================
# ENVIRONMENT CONFIGURATION
# ====================================================

# Environment name (dev, stage, qa, prod)
# - dev: Development environment
# - stage: Staging environment  
# - qa: Quality assurance environment
# - prod: Production environment
ENVIRONMENT=dev

# Cluster type (local, aws)
CLUSTER_TYPE=local

# ====================================================
# MULTI-ENVIRONMENT CONFIGURATION
# ====================================================

# Enable multiple environments in single cluster
# Set to true to deploy dev, stage, qa, prod in same cluster
# Set to false to deploy only the specified ENVIRONMENT
MULTI_ENVIRONMENT=false

# Environment-specific namespace prefixes
# Each environment will use: {PREFIX}-{ENVIRONMENT}
# Example: platform-dev, platform-stage, platform-qa, platform-prod
NAMESPACE_PREFIX=platform

# Environment-specific domain suffixes
# For local: {ENV}.127.0.0.1.nip.io
# For AWS: {ENV}.comind.pro
DOMAIN_SUFFIX=127.0.0.1.nip.io

# ====================================================
# AWS CONFIGURATION (for AWS environments)
# ====================================================

# AWS region
AWS_REGION=us-west-2

# EKS cluster version
EKS_CLUSTER_VERSION=1.28

# EKS node instance type
EKS_NODE_INSTANCE_TYPE=t3.medium

# EKS node scaling
EKS_NODE_DESIRED_SIZE=2
EKS_NODE_MAX_SIZE=4
EKS_NODE_MIN_SIZE=1

# ====================================================
# LOCAL CONFIGURATION (for local environments)
# ====================================================

# k3d cluster configuration
K3D_CLUSTER_NAME=comind-ops-dev
K3D_CLUSTER_PORT=6443
K3D_HTTP_PORT=8080
K3D_HTTPS_PORT=8443

# ====================================================
# DOMAIN CONFIGURATION
# ====================================================

# Base domain for local development
LOCAL_DOMAIN=127.0.0.1.nip.io

# Base domain for AWS environments
AWS_DOMAIN=comind.pro

# ====================================================
# MONITORING CONFIGURATION
# ====================================================

# Monitoring dashboard configuration
MONITORING_ENABLED=true
MONITORING_NAMESPACE=monitoring

# ====================================================
# EXTERNAL SERVICES CONFIGURATION
# ====================================================

# PostgreSQL configuration
POSTGRES_ENABLED=true
POSTGRES_HOST=host.docker.internal
POSTGRES_PORT=5432
POSTGRES_DATABASE=comind_ops
POSTGRES_USERNAME=comind_ops
POSTGRES_PASSWORD=comind_ops_password

# MinIO configuration
MINIO_ENABLED=true
MINIO_HOST=host.docker.internal
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# Redis configuration
REDIS_ENABLED=true
REDIS_HOST=host.docker.internal
REDIS_PORT=6379
REDIS_PASSWORD=

# ====================================================
# ENVIRONMENT-SPECIFIC CONFIGURATIONS
# ====================================================

# Development environment settings
DEV_NAMESPACE=platform-dev
DEV_DOMAIN=dev.127.0.0.1.nip.io
DEV_REPLICAS=1
DEV_RESOURCES_LIMITS_CPU=500m
DEV_RESOURCES_LIMITS_MEMORY=512Mi
DEV_RESOURCES_REQUESTS_CPU=100m
DEV_RESOURCES_REQUESTS_MEMORY=128Mi

# Staging environment settings
STAGE_NAMESPACE=platform-stage
STAGE_DOMAIN=stage.127.0.0.1.nip.io
STAGE_REPLICAS=2
STAGE_RESOURCES_LIMITS_CPU=1000m
STAGE_RESOURCES_LIMITS_MEMORY=1Gi
STAGE_RESOURCES_REQUESTS_CPU=200m
STAGE_RESOURCES_REQUESTS_MEMORY=256Mi

# QA environment settings
QA_NAMESPACE=platform-qa
QA_DOMAIN=qa.127.0.0.1.nip.io
QA_REPLICAS=2
QA_RESOURCES_LIMITS_CPU=1000m
QA_RESOURCES_LIMITS_MEMORY=1Gi
QA_RESOURCES_REQUESTS_CPU=200m
QA_RESOURCES_REQUESTS_MEMORY=256Mi

# Production environment settings
PROD_NAMESPACE=platform-prod
PROD_DOMAIN=prod.127.0.0.1.nip.io
PROD_REPLICAS=3
PROD_RESOURCES_LIMITS_CPU=2000m
PROD_RESOURCES_LIMITS_MEMORY=2Gi
PROD_RESOURCES_REQUESTS_CPU=500m
PROD_RESOURCES_REQUESTS_MEMORY=512Mi

# ====================================================
# ARGOCD CONFIGURATION
# ====================================================

# ArgoCD configuration
ARGOCD_ENABLED=true
ARGOCD_NAMESPACE=argocd
ARGOCD_VERSION=5.49.0

# ====================================================
# SECURITY CONFIGURATION
# ====================================================

# Sealed Secrets configuration
SEALED_SECRETS_ENABLED=true
SEALED_SECRETS_NAMESPACE=sealed-secrets

# ====================================================
# DEVELOPMENT CONFIGURATION
# ====================================================

# Development mode (enables additional debugging)
DEV_MODE=false

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# ====================================================
# CI/CD CONFIGURATION
# ====================================================

# CI/CD pipeline configuration
CI_ENABLED=true
CD_ENABLED=true

# ====================================================
# BACKUP CONFIGURATION
# ====================================================

# Backup configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
