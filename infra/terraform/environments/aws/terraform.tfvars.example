# =============================================================================
# AWS Environment Configuration Example
# =============================================================================
# This file contains example configuration values for the AWS EKS environment.
# Copy this file to terraform.tfvars and modify the values as needed.

# -----------------------------------------------------------------------------
# Basic Configuration
# -----------------------------------------------------------------------------
cluster_name = "comind-ops-dev"             # Name of the EKS cluster
environment  = "dev"                        # Environment name (dev, stage, prod)

# -----------------------------------------------------------------------------
# AWS Configuration
# -----------------------------------------------------------------------------
aws_region = "us-west-2"                    # AWS region for resources

# -----------------------------------------------------------------------------
# EKS Cluster Configuration
# -----------------------------------------------------------------------------
eks_cluster_version = "1.28"                # Kubernetes version for EKS cluster

# -----------------------------------------------------------------------------
# EKS Node Group Configuration
# -----------------------------------------------------------------------------
eks_node_instance_type = "t3.medium"         # Instance type for EKS worker nodes
eks_node_desired_size = 2                   # Desired number of EKS worker nodes
eks_node_max_size     = 4                   # Maximum number of EKS worker nodes
eks_node_min_size     = 1                   # Minimum number of EKS worker nodes

# -----------------------------------------------------------------------------
# Network Configuration
# -----------------------------------------------------------------------------
vpc_cidr = "10.0.0.0/16"                   # CIDR block for VPC

